<UserControl x:Class="Chrysalis.Views.ModDetailsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mock="clr-namespace:Chrysalis.Mock;assembly=Chrysalis"
             xmlns:ext="clr-namespace:Chrysalis.Extensions"
             xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             xmlns:conv="clr-namespace:Chrysalis.Converters"
             xmlns:viewModels="clr-namespace:Chrysalis.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:mdxaml="https://github.com/whistyun/Markdown.Avalonia"
             xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia"
             xmlns:models="clr-namespace:Chrysalis.Models"
             mc:Ignorable="d"
             d:DesignWidth="480"
             d:DesignHeight="550"
             d:DataContext="{x:Static mock:MockModPageViewModel.DesignInstance}"
             x:DataType="viewModels:ModPageViewModel">
    
    <Border
        IsVisible="{Binding ., Converter={x:Static ObjectConverters.IsNotNull}, FallbackValue=False}"
        DataContext="{Binding SelectedModItem}"
        Background="#2D0A1F"
        Padding="12">
        
        <Grid
            Name="DetailsPanel"
            RowDefinitions="Auto,Auto,*"
            ColumnDefinitions="*,Auto"
            x:DataType="models:ModItem">
            
            <!-- Mod 名称 -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding Name}"
                FontSize="26"
                FontWeight="Bold"
                Foreground="#E85D75"
                Margin="0 0 0 8"
                TextTrimming="CharacterEllipsis" />
            
            <!-- 版本信息 -->
            <StackPanel Grid.Column="0" Margin="0 0 0 12" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Text="{Binding VersionText}" 
                        FontWeight="SemiBold"
                        FontSize="16"
                        Foreground="#D9A5B3"/>
                    
                    <!-- 更新提示 -->
                    <TextBlock 
                        IsVisible="{Binding UpdateAvailable}"
                        Foreground="#C75B7A"
                        FontWeight="SemiBold"
                        Margin="8 0 0 0">
                        <Run Text=" → " />
                        <Run Text="{Binding Version}" Foreground="#E85D75"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            
            <!-- Repository 按钮 -->
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="0 0 0 8"
                FontSize="13"
                Height="32"
                Background="#4A1230"
                BorderBrush="#8B2D54"
                BorderThickness="1"
                CornerRadius="6"
                Command="{Binding OpenRepository}">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#6B2D48"/>
                        <Setter Property="BorderBrush" Value="#C75B7A"/>
                    </Style>
                </Button.Styles>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="Repository" Foreground="#D9A5B3"/>
                    <i:Icon
                        FontSize="12"
                        Value="fa-solid fa-arrow-up-right-from-square"
                        Foreground="#D9A5B3" />
                </StackPanel>
            </Button>
            
            <!-- 详情标签页 -->
            <TabControl 
                Grid.Row="2" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#2D0A1F"
                BorderThickness="0">
                
                <TabControl.Styles>
                    <Style Selector="TabControl /template/ Panel">
                        <Setter Property="Margin" Value="0 0 0 12" />
                    </Style>
                    
                    <Style Selector="TabItem">
                        <Setter Property="Foreground" Value="#D9A5B3"/>
                        <Setter Property="Background" Value="#3D2832"/>
                        <Setter Property="BorderBrush" Value="#6B4A5A"/>
                        <Setter Property="Padding" Value="16 8"/>
                        <Setter Property="Margin" Value="0 0 4 0"/>
                    </Style>
                    
                    <Style Selector="TabItem:pointerover">
                        <Setter Property="Background" Value="#4A1230"/>
                    </Style>
                    
                    <Style Selector="TabItem:selected">
                        <Setter Property="Background" Value="#8B2D54"/>
                        <Setter Property="Foreground" Value="#E85D75"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>

                    <Style Selector="ItemsControl.Bulleted">
                        <Setter Property="ItemTemplate">
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0 4">
                                    <i:Icon 
                                        FontSize="8" 
                                        Value="fa-solid fa-circle" 
                                        Foreground="#C75B7A"
                                        VerticalAlignment="Center" />
                                    <TextBlock 
                                        Margin="8 0 0 0" 
                                        Text="{Binding ., DataType={x:Type system:String}}"
                                        Foreground="#D9A5B3"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </Setter>
                    </Style>
                </TabControl.Styles>

                <!-- Description 标签 -->
                <TabItem Header="Description">
                    <ScrollViewer>
                        <TextBlock 
                            Text="{Binding Description}" 
                            TextWrapping="Wrap" 
                            Foreground="#D9A5B3"
                            LineHeight="22"
                            Margin="0 8" />
                    </ScrollViewer>
                </TabItem>

                <!-- Dependencies 标签 -->
                <TabItem Header="{ext:Localize XAML_Dependencies}" IsVisible="{Binding !!Dependencies.Length}">
                    <ScrollViewer>
                        <ItemsControl Classes="Bulleted" ItemsSource="{Binding Dependencies}" />
                    </ScrollViewer>
                </TabItem>

                <!-- Tags 标签 -->
                <TabItem
                    Header="{ext:Localize XAML_Tags}"
                    IsVisible="{Binding Tags, Converter={x:Static conv:TagConverters.NonZero}}">
                    <ScrollViewer>
                        <ItemsControl 
                            Classes="Bulleted"
                            ItemsSource="{Binding Tags, Converter={x:Static conv:TagConverters.AsStrings}}" />
                    </ScrollViewer>
                </TabItem>

                <!-- Integrations 标签 -->
                <TabItem
                    IsVisible="{Binding !!Integrations.Length}"
                    Header="{ext:Localize XAML_Integrations}">
                    <ScrollViewer>
                        <ItemsControl Classes="Bulleted" ItemsSource="{Binding Integrations}" />
                    </ScrollViewer>
                </TabItem>

                <!-- Authors 标签 -->
                <TabItem
                    IsVisible="{Binding !!Authors.Length}"
                    Header="Authors">
                    <ScrollViewer>
                        <ItemsControl Classes="Bulleted" ItemsSource="{Binding Authors}" />
                    </ScrollViewer>
                </TabItem>

                <!-- README 标签 -->
                <TabItem Header="README" Name="ReadmeTab">
                    <mdxaml:MarkdownScrollViewer 
                        ClipToBounds="True" 
                        Name="MdReadme">
                        
                        <mdxaml:MarkdownScrollViewer.MarkdownStyle>
                            <Style>
                                <Style Selector=".Markdown_Avalonia_MarkdownViewer TextBlock.CodeBlock">
                                    <Setter Property="Foreground" Value="#D9A5B3" />
                                    <Setter Property="Background" Value="#3D2832"/>
                                </Style>
                                <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CCode">
                                    <Setter Property="Foreground" Value="#E85D75" />
                                    <Setter Property="Background" Value="#3D2832"/>
                                </Style>
                            </Style>
                        </mdxaml:MarkdownScrollViewer.MarkdownStyle>
                        
                        <mdxaml:MarkdownScrollViewer.Styles>
                            <Style Selector="ctxt|CTextBlock">
                                <Setter Property="FontFamily" Value="{StaticResource InterFont}" />
                                <Setter Property="Foreground" Value="#D9A5B3" />
                            </Style> 
                            
                            <Style Selector="ctxt|CTextBlock.Heading1">
                                <Setter Property="FontSize" Value="24" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Foreground" Value="#E85D75" />
                            </Style>

                            <Style Selector="ctxt|CTextBlock.Heading2">
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Foreground" Value="#C75B7A" />
                            </Style>

                            <Style Selector="ctxt|CTextBlock.Heading3">
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Foreground" Value="#C75B7A" />
                            </Style>

                            <Style Selector="ctxt|CTextBlock.Heading4">
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Foreground" Value="#D9A5B3" />
                            </Style>
                        </mdxaml:MarkdownScrollViewer.Styles>
                    </mdxaml:MarkdownScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>